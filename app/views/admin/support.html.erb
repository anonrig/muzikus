<div role="main" class="main">

				<section class="page-top">
					<div class="container">
						<div class="row">
							<div class="span12">
								<ul class="breadcrumb">
									<li><%= link_to "Home", root_path %> <span class="divider">/</span></li>
									<li>Management <span class="divider">/</span></li>
									<li class="active">Support</li>
								</ul>
							</div>
						</div>
						<div class="row">
							<div class="span12">
								<h2>Support Tickets</h2>
							</div>
						</div>
					</div>
				</section>

				<div class="container">

					<table class="table table-hover">
						<thead>
							<tr>
								<th>Name</th>
								<th>E-mail</th>
								<th>Subject</th>
								<th>Message</th>
								<th>Sent Date</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @allSupports.each do |item| %>
								<%= form_for item, :url => {:controller => "admin", :action => "supportdelete"}, :method => "post" do |f| %>
									<tr>
										<td><%= item.name %></td>
										<td><%= item.email %></td>
										<td><%= item.subject %></td>
										<td><%= item.message %></td>
										<%= f.hidden_field :id, :value => item.id %>
										<td><%= item.created_at.strftime("%B %d, %Y") %></td>
										<th><%= f.submit "Delete", :class => "btn btn-danger" %></th>
									</tr>
								<% end %>
							<% end %>
						</tbody>
					</table>
			
				</div>

			</div>